extends ../../layouts/default.pug

block main 
    h1 Trang danh sách sản phẩm 

    .card.mb-3 
        .card-header Bộ Lọc và Tìm kiếm 
        .card-boby 
            button(class="btn btn-sm ml-1 btn-outline-success active") Tất cả
            button(class="btn btn-sm ml-1 btn-outline-success") Hoạt động
            button(class="btn btn-sm ml-1 btn-outline-success") Dùng hoạt động


    table.table.table-hover.table-sm 
        thead 
            tr 
                th STT 
                th Hình ảnh 
                th Tiêu đề
                th Giá
                th Trạng thái 
                th Hành động
        tbody 
            each item,index in products
                tr 
                    td #{index+1}
                    td  
                        img(
                            src = item.thumbnail
                            alt = "Sản phẩm"
                            width = "100px"
                            height = "aut.o"
                        )
                    td #{item.title}
                    td #{item.price}
                    td 
                        if(item.status == 'active')
                            a(href ="#" class = "badge badge-success") Hoạt động
                        else
                            a(href ="#" class = "badge badge-danger") Dừng hoạt động
                    td 
                        button(class="btn btn-warning btn-sm") Sửa
                        button(class="btn btn-danger btn-sm ml-1 ") Xóa